{
  "compilerOptions": {
    "target": "esnext",                          
    "module": "commonjs",                    
    "lib": ["dom"],
    "declaration": true,                     
    "allowJs": true,
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}